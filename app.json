{
  "expo": {
    "name": "Stock Manager",
    "slug": "stock-manager",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#1a1a2e"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.stockmanager.app",
      "permissions": [
        "CAMERA"
      ]
    },
    "plugins": [
      "expo-sqlite",
      "expo-asset",
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "Izinkan $(PRODUCT_NAME) mengakses kamera untuk scan barcode."
        }
      ]
    ]
  }
}